{
  "version": 2,
  "buildCommand": "cd ../.. && pnpm install && pnpm -r build",
  "installCommand": "echo 'Using buildCommand for install'",
  "functions": {
    "api/index.js": {
      "includeFiles": "../dist/**"
    }
  },
  "rewrites": [
    { "source": "/api/(.*)", "destination": "/api/index.js" },
    { "source": "/health", "destination": "/api/index.js" },
    { "source": "/(.*)", "destination": "/api/index.js" }
  ]
}
