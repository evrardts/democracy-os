{
  "version": 2,
  "installCommand": "pnpm install --frozen-lockfile --prod=false",
  "buildCommand": "pnpm -r build",
  "outputDirectory": "apps/api",
  "functions": {
    "apps/api/api/index.js": {
      "includeFiles": "apps/api/dist/**"
    }
  },
  "rewrites": [
    { "source": "/api/(.*)", "destination": "/apps/api/api/index.js" },
    { "source": "/health", "destination": "/apps/api/api/index.js" },
    { "source": "/(.*)", "destination": "/apps/api/api/index.js" }
  ]
}
