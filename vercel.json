{
  "version": 2,
  "buildCommand": "pnpm install --frozen-lockfile --prod=false && pnpm -w run build:vercel",
  "builds": [
    {
      "src": "api/index.js",
      "use": "@vercel/node",
      "config": {
        "includeFiles": ["apps/api/dist/**", "packages/*/dist/**"]
      }
    }
  ],
  "routes": [
    { "src": "/(.*)", "dest": "/api/index.js" }
  ]
}
