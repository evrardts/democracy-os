{
  "version": 2,
  "installCommand": "pnpm install --frozen-lockfile --prod=false",
  "buildCommand": "pnpm -w run build:vercel",
  "builds": [
    {
      "src": "apps/api/api/index.js",
      "use": "@vercel/node",
      "config": {
        "includeFiles": ["apps/api/dist/**", "packages/*/dist/**"]
      }
    }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "/apps/api/api/index.js" },
    { "src": "/health", "dest": "/apps/api/api/index.js" },
    { "src": "/(.*)", "dest": "/apps/api/api/index.js" }
  ]
}
